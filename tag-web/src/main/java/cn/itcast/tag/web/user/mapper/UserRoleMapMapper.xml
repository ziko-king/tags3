<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.itcast.tag.web.user.mapper.UserRoleMapMapper">
    <!-- params -->
    <parameterMap id="BaseParamsMap" type="cn.itcast.tag.web.user.bean.UserRoleMapBean"/>

    <!-- result -->
    <resultMap id="BaseResultMap" type="cn.itcast.tag.web.user.bean.UserRoleMapBean"/>

    <resultMap id="UserRoleMap" type="cn.itcast.tag.web.user.bean.UserRoleMapBean">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <id column="user_id" property="userId" jdbcType="BIGINT"/>
        <id column="role_id" property="roleId" jdbcType="BIGINT"/>
        <result column="state" property="state"/>
        <result column="ctime" property="ctime" jdbcType="TIMESTAMP"/>
        <result column="utime" property="utime" jdbcType="TIMESTAMP"/>
        <result column="remark" property="remark" jdbcType="VARCHAR"/>
    </resultMap>

    <!-- column -->
    <sql id="Base_Column_List">
        id,user_id,role_id,state,ctime,utime,remark
    </sql>

    <select id="queryForId" resultMap="UserRoleMap" parameterMap="BaseParamsMap">
        select
        <include refid="Base_Column_List"/>
        from tbl_user_role_map
        where id = #{id}
        <if test="state != 0">
            AND state = #{state}
        </if>
    </select>

    <select id="queryForUserId" resultMap="UserRoleMap" parameterType="java.lang.Long">
        select
        <include refid="Base_Column_List"/>
        from tbl_user_role_map
        where user_id = #{id}
    </select>

    <!-- 新增用户角色关联 -->
    <insert id="addUserRoleMap" parameterType="cn.itcast.tag.web.user.bean.UserRoleMapBean" useGeneratedKeys="true"
            keyProperty="id">
        insert into tbl_user_role_map
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">
                user_id,
            </if>
            <if test="roleId != null">
                role_id,
            </if>
            <if test="state != 0">
                state,
            </if>
            <if test="ctime != null">
                ctime,
            </if>
            <if test="utime != null">
                utime,
            </if>
            <if test="remark != null">
                remark,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userId != null">
                #{userId},
            </if>
            <if test="roleId != null">
                #{roleId},
            </if>
            <if test="state != 0">
                #{state},
            </if>
            <if test="ctime != null">
                #{ctime},
            </if>
            <if test="utime != null">
                #{utime},
            </if>
            <if test="remark != null">
                #{remark},
            </if>
        </trim>
    </insert>

    <!-- 根据ID删除用户角色关联 -->
    <delete id="delUserRoleMapForId" parameterMap="BaseParamsMap">
        DELETE FROM tbl_user_role_map
        WHERE id=#{id}
    </delete>

    <!-- 根据ID删除用户角色关联 -->
    <delete id="delUserRoleMap" parameterMap="BaseParamsMap">
        DELETE FROM tbl_user_role_map
        WHERE 1=1
        <if test="id != null">
            AND id=#{id}
        </if>
        <if test="userId != null">
            AND user_id=#{userId}
        </if>
        <if test="roleId != null">
            AND role_id=#{roleId}
        </if>
        <if test="state != 0">
            AND state=#{state}
        </if>
    </delete>

    <!-- 根据ID修改用户角色关联 -->
    <update id="updateUserRoleMap" parameterMap="BaseParamsMap">
        UPDATE tbl_user_role_map SET
        <if test="userId != null">
            user_id=#{userId},
        </if>
        <if test="roleId != null">
            role_id=#{roleId},
        </if>
        <if test="state != 0">
            state=#{state},
        </if>
        <if test="remark != null">
            remark=#{remark},
        </if>
        utime=NOW() WHERE id=#{id}
    </update>

    <!-- 根据ID修改用户角色关联 -->
    <update id="updateUserRoleMapForUserId" parameterMap="BaseParamsMap">
        UPDATE tbl_user_role_map SET
        <if test="roleId != null">
            role_id=#{roleId},
        </if>
        <if test="state != 0">
            state=#{state},
        </if>
        <if test="remark != null">
            remark=#{remark},
        </if>
        utime=NOW() WHERE user_id=#{userId}
    </update>

</mapper>
