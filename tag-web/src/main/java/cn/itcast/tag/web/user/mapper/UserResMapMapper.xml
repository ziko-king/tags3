<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.itcast.tag.web.user.mapper.UserResMapMapper">
    <!-- params -->
    <parameterMap id="BaseParamsMap" type="cn.itcast.tag.web.user.bean.UserResMapBean"/>

    <!-- result -->
    <resultMap id="BaseResultMap" type="cn.itcast.tag.web.user.bean.UserResMapBean"/>

    <!-- column -->
    <sql id="Base_Column_List">
        id,user_id,res_id,perm_ids,state,ctime,utime,remark
    </sql>

    <select id="queryForId" resultMap="BaseResultMap" parameterMap="BaseParamsMap">
        select
        <include refid="Base_Column_List"/>
        from tbl_user_res_map
        where id = #{id}
        <if test="state != 0">
            AND state = #{state}
        </if>
    </select>

    <!-- 新增用户角色关联 -->
    <insert id="addUserResMap" parameterType="cn.itcast.tag.web.user.bean.UserResMapBean" useGeneratedKeys="true"
            keyProperty="id">
        insert into tbl_user_res_map
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">
                user_id,
            </if>
            <if test="resId != null">
                res_id,
            </if>
            <if test="permIds != null">
                perm_ids,
            </if>
            <if test="state != 0">
                state,
            </if>
            <if test="ctime != null">
                ctime,
            </if>
            <if test="utime != null">
                utime,
            </if>
            <if test="remark != null">
                remark,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userId != null">
                #{userId},
            </if>
            <if test="resId != null">
                #{resId},
            </if>
            <if test="permIds != null">
                #{permIds},
            </if>
            <if test="state != 0">
                #{state},
            </if>
            <if test="ctime != null">
                #{ctime},
            </if>
            <if test="utime != null">
                #{utime},
            </if>
            <if test="remark != null">
                #{remark},
            </if>
        </trim>
    </insert>

    <delete id="delUserResMap" parameterMap="BaseParamsMap">
        DELETE FROM tbl_user_res_map
        WHERE 1=1
        <if test="id != null">
            and id=#{id}
        </if>
        <if test="userId != null">
            and user_id=#{userId}
        </if>
        <if test="resId != null">
            and res_id=#{resId}
        </if>
        <if test="permIds != null">
            and perm_ids=#{permIds}
        </if>
        <if test="state != 0">
            and state=#{state}
        </if>
    </delete>

    <!-- 根据ID修改用户角色关联 -->
    <update id="updateUserResMap" parameterMap="BaseParamsMap">
        UPDATE tbl_user_res_map SET
        <if test="userId != null">
            user_id=#{userId},
        </if>
        <if test="resId != null">
            res_id=#{resId},
        </if>
        <if test="permIds != null">
            perm_ids=#{permIds},
        </if>
        <if test="state != 0">
            state=#{state},
        </if>
        <if test="remark != null">
            remark=#{remark},
        </if>
        utime=NOW() WHERE id=#{id}
    </update>

</mapper>
